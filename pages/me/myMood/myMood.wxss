.swiper-tab{  
    width: 100%;  
    border-bottom: 2px solid #dcdcdc;  
    text-align: center;  
    line-height: 40px;
    height:42px;
    }  
.swiper-tab-list{  font-size: 30rpx;  
    display: inline-block;  
    width: 33.33%;  
    color: #666666;  
}  
.on{ color: #339900;  
    border-bottom: 5rpx solid #339900;}  
  
.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; }  
 
.recordlist{
  text-align: left;
  padding:16px ;
  border-bottom: 1px solid #eeeeee;
  position: relative;
}
.recordlist text{
  font-size: 17px;
  color:#333333;
  margin-bottom: 10px;
  display: block;
  }
.recordlist view{
  font-size: 12px;
  color:#a9a9a9;
   
}
.recordlist image{
  position: absolute;
  height:20px;
  width:20px;
  display: block;
  right:20px;
  top:50%;
  margin-top:-10px;
}