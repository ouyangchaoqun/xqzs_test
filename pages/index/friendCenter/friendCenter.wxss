/* pages/index/friendCenter/friendCenter.wxss */

.banner{
  width:100%;
  position: relative;
  overflow: visible;
  margin-bottom: 40px;
  }
.banner view{
  border-radius: 50%;
  background: rgba(204,204,204,0.4);
  padding:4px;
  position: absolute;
 bottom:-32px;
  left:50%;
  margin-left:-32px;
  z-index: 99;
}
.banner image{
  display: block;
  height:64px;
  width:64px;
  border-radius: 50%;
  overflow: auto;
}
.center_box{
 padding:0 20px;
}
.chart{
 width:100%; 
 height:190px;
  border-radius: 5px;
  display: block;
  margin: 0 auto;
  margin-bottom:22px;
  background: url("http://m.xqzs.cn/static/web/img/chart_bj.png");
  background-size: cover;
  padding-top: 8px;
  position: relative;
}
.chart text{
  font-size: 12px;
  color:#ffffff;
  position: absolute;
  left:50%;
  top:-3px;
  margin-left:-24px;
}